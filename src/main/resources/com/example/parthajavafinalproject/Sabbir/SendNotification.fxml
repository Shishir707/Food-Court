<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.foodcourt.controller.SendNotificationController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ðŸ“¢ Send Notification" />

    <VBox alignment="CENTER_LEFT" maxWidth="350" spacing="10">
        <Label text="Title:" />
        <TextField fx:id="titleField" prefWidth="300" promptText="Enter title" />

        <Label text="Message:" />
        <TextArea fx:id="messageArea" prefHeight="100" prefWidth="300" promptText="Enter your message" />

        <Label text="Target Users:" />
        <ComboBox fx:id="targetComboBox" prefWidth="300" promptText="Choose user group" />
    </VBox>

    <Button fx:id="sendButton" prefWidth="200" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" text="Send Notification" />
   <Button mnemonicParsing="false" text="Back" />
</VBox>
