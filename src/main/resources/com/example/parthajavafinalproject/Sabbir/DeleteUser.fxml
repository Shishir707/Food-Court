<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parthajavafinalproject.Sabbir.DeleteUserController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="🗑️ Delete User Account" />

    <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="10">
        <Label text="Select User to Delete:" />
        <ComboBox fx:id="userComboBox" prefWidth="300" promptText="Choose a user" />
    </VBox>

    <Button fx:id="deleteButton" prefWidth="150" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete User" onAction="#handleDeleteButton" />
    <Button mnemonicParsing="false" text="Back" onAction="#handleBackButton" />

    <Label fx:id="successLabel" textFill="green" style="-fx-font-size: 14px; -fx-font-weight: bold;" visible="false"/>
</VBox>
