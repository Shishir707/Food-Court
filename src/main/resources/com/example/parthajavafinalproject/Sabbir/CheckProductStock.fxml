<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parthajavafinalproject.Sabbir.ProductStockController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" Check Product Stock" />

    <TableView fx:id="stockTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="productNameColumn" prefWidth="300" text="Product Name" />
            <TableColumn fx:id="quantityColumn" prefWidth="200" text="Quantity in Stock" />
        </columns>
    </TableView>
    <Button mnemonicParsing="false" onAction="#backButtonOnClick" text="Back" />
</VBox>