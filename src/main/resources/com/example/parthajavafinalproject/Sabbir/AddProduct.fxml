<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.foodcourt.AddProductController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" Add New Product" />

    <VBox alignment="CENTER_LEFT" maxWidth="350" spacing="10">
        <Label text="Product Name:" />
        <TextField fx:id="productNameField" prefWidth="300" promptText="Enter product name" />

        <Label text="Price:" />
        <TextField fx:id="priceField" prefWidth="300" promptText="Enter price" />

        <Label text="Quantity:" />
        <TextField fx:id="quantityField" prefWidth="300" promptText="Enter quantity" />
    </VBox>

    <Button fx:id="addButton" prefWidth="160" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Product" />
</VBox>
