<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodcourt.controller.RevenueChartController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" Revenue Distribution" />

    <VBox alignment="CENTER_LEFT" maxWidth="350" spacing="10">
        <Label text="Select Period:" />
        <ComboBox fx:id="periodComboBox" prefWidth="300" promptText="Select period " />
    </VBox>

    <Button fx:id="generateButton" prefWidth="200" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Generate Pie Chart" />

    <PieChart fx:id="revenuePieChart" prefHeight="300" prefWidth="400" />
   <Button mnemonicParsing="false" text="Back" />
</VBox>
