<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodcourt.ConfirmDeliveryController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" Confirm Product Delivery" />

    <VBox alignment="CENTER_LEFT" maxWidth="350" spacing="10">
        <Label text="Select Delivery ID:" />
        <ComboBox fx:id="deliveryComboBox" prefWidth="300" promptText="Choose delivery" />
    </VBox>

    <Button fx:id="confirmButton" prefWidth="160" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirm Delivery" />
   <Button mnemonicParsing="false" text="Back" />
</VBox>
